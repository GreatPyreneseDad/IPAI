# IPAI Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=your-secret-key-change-this-to-a-long-random-string
JWT_SECRET=your-jwt-secret-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://ipai:changeme@localhost:5432/ipai
DB_PASSWORD=changeme

# Redis
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Ollama LLM
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# Email (Optional - for production)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@ipai.app

# Blockchain (Optional)
BLOCKCHAIN_NETWORK=polygon
BLOCKCHAIN_RPC_URL=
BLOCKCHAIN_PRIVATE_KEY=
CONTRACT_ADDRESS_GCT=
CONTRACT_ADDRESS_IDENTITY=
CONTRACT_ADDRESS_SAGE=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:80"]

# PgAdmin (Optional)
PGADMIN_EMAIL=admin@ipai.local
PGADMIN_PASSWORD=admin